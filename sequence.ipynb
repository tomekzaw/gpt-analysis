  scale_x_discrete(limits= line_df %>% distinct(stopSequence) %>% arrange(stopSequence) %>% `$`(stopSequence), labels=line_df %>% distinct(stopSequence, stopName) %>% arrange(stopSequence) %>% `$`(stopName)) + 
